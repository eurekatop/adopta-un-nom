---
import Layout from '../../layouts/baseLayout.astro';

const { lang } = Astro.params;

const translations = {
  ca: {
    title: 'Endevina la definició?',
    description: 'Et presentarem una definició, i hauràs d’escollir la paraula correcta entre diverses opcions. Aconsegueix la millor puntuació possible!',
    start: 'Comença a jugar',
  },
  es: {
    title: '¿Adivina la definición?',
    description: 'Te mostraremos una definición, y deberás escoger la palabra correcta entre varias opciones. ¡Consigue la mejor puntuación posible!',
    start: 'Empezar a jugar',
  },
  en: {
    title: 'Guess the definition?',
    description: 'We’ll show you a definition, and you’ll have to choose the correct word among several options. Try to get the best score!',
    start: 'Start playing',
  },
};

const t = translations[lang as keyof typeof translations] ?? translations.ca;
const seed = Math.floor(Math.random() * (9999999 - 1 + 1) + 1); 
---

<Layout title={t.title} lang={lang}>
  {lang === 'ca' ? (
    <div style="text-align: center; padding: 2rem;">
      <h1>{t.title}</h1>
      <p>La versió catalana estarà disponible aviat. Mentrestant, pots jugar en un altre idioma.</p>
    </div>
  ) : (
    <div style="text-align: center; padding: 2rem;">
      <h1>{t.title}</h1>
      <p>{t.description}</p>
      <a href={`/${lang}/game/${seed}`} style="display: inline-block; margin-top: 1.5rem; font-size: 1.2rem; padding: 0.8rem 1.5rem; background: #444; color: white; border-radius: 0.5rem; text-decoration: none;">
        {t.start}
      </a>
    </div>
  )}
</Layout>
